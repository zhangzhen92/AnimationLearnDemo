<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_rxml"
            android:text="rotation_xml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_rjava"
            android:text="rotation_java"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_move"
        android:layout_marginTop="20dp"
        android:background="@color/move_background"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="200dp"></RelativeLayout>

</LinearLayout>
